type Post {
    id: ID!
    text: String
    category: String
    author: Author
}

type Author {
    id: ID!
    name: String
    thumbnail: String
    posts : [Post]
}


input AuthorInput {
    name: String!
    thumbnail: String
}

# The Root Query for the application
type Query {
    recentPosts(count: Int, offset: Int): [Post]
    authors : [Author]
    author(authorId:String) : Author
}

type Mutation {
    author(operation:String, authorInput: AuthorInput) : Author
}